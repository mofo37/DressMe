<h1 class='font-weight-light'>
  Editing piece:
  <%= link_to @piece.name, @piece %>
</h1>

<hr>

<%= render 'form', piece: @piece %>

<div class='row'>
  <div id='danger-zone' class='offset-md-6 col-12 col-md-6'>
    <div class='card border-danger my-5'>
      <div class='card-header bg-danger text-white'>The Danger Zone</div>

      <div class='card-body text-danger'>
        <h5 class='card-title'>Delete this piece from your closet?</h5>

        <p class='card-text'>
          If you click on this button, your piece will be immediately deleted.
          <b>THERE IS NO UNDO.</b>
        </p>

        <%= link_to 'Delete', @piece, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
