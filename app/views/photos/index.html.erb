<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table class='table'>
  <thead>
    <tr>
      <th>URL</th>
      <th>Photo</th>
      <th>Front</th>
      <th>Back</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= link_to image_tag(photo.url), photo.url %></td>
        <td>
        <% if photo.image.attached? %>
        <%= image_tag(url_for(photo.image)) %>
        <% end %>
        </td>
        <td><%= photo.front %></td>
        <td><%= photo.back %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
