<div class="row justify-content-md-center mt-5 mb-3">
  <h1 class="col-12 col-md-6">Sign In</h1>
</div>

<div class="row justify-content-md-center">
  <%= form_tag sessions_path, class: "col-12 col-md-6" do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>

    <div class="actions my-5">
      <%= submit_tag "Sign In", class: "btn btn-primary btn-lg" %>

      <p class="mt-3">
        Don't have an account?
        <%= link_to 'Sign up here', signup_path %>
      </p>
    </div>
  <% end %>
</div>
