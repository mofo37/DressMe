<p id="notice"><%= notice %></p>

<h1>Outfits</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Uploaded Image</th>
      <th>Pieces</th>
      <th>Formality</th>
      <th>Work</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @outfits.each do |outfit| %>
      <tr>
        <td><%= outfit.name %></td>
        <td>
            <div>
            <% if outfit.url.present? %>
              <%= image_tag(outfit.url)  %>
            <% end %>
            </div>
        </td>
        <td>
            <div>
              <% if outfit.images.attached? %>
                <% outfit.images.each do |image|%>
                  <%= image_tag(url_for(image)) %>
                <% end %>
              <% end %>
            </div>
          </td>
          <td>
            <div>
              <% outfit.pieces.each do |piece| %>
                <% piece.images. each do |image| %>
                  <%= image_tag image %>
                <% end %>  
              <% end %>
            </div>
        </td>
        <td><%= outfit.formality %></td>
        <td><%= outfit.work %></td>
        <td><%= link_to 'Show', outfit %></td>
        <td><%= link_to 'Edit', edit_outfit_path(outfit) %></td>
        <td><%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
