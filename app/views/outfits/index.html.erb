<p id="notice"><%= notice %></p>

<h1>Outfits</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Formality</th>
      <th>Work</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outfits.each do |outfit| %>
      <tr>
        <td><%= outfit.name %></td>
        <td>
          <% outfit.photos.each do |photo| %>
            <div>
              <%= image_tag(photo.url)  %>
            </div>
          <% end %>
        </td>
        <td><%= outfit.formality %></td>
        <td><%= outfit.work %></td>
        <td><%= link_to 'Show', outfit %></td>
        <td><%= link_to 'Edit', edit_outfit_path(outfit) %></td>
        <td><%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Outfit', new_outfit_path %>
