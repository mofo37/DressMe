<p id="notice"><%= notice %></p>

<p>
    <h2><%= @outfit.name %></h2>
</p>
<p>
    <% @outfit.images.each do |image| %>
      <div>
        <%= image_tag image %>
      </div>
    <% end %>
</p>

<p>
    <%= @outfit.formality %>
</p>

<p>
    <%= @outfit.work %>
</p>

<p>
  <% @outfit.pieces.each do |piece| %>
    <% piece.images. each do |image| %>
      <%= image_tag image %>
    <% end %>  
  <% end %>
</p>

<%= link_to 'Edit', edit_outfit_path(@outfit) %>
