<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @outfit.name %>
</p>

<p>
  <strong>URL:</strong>
    <div>
      <%= image_tag(@outfit.url) if @outfit.url.present? %>
    </div>
</p>
<p>
  <strong>Uploaded Photo:</strong>
    <div>
      <%= image_tag(url_for @outfit.image) if @outfit.image.present? %>
    </div>
</p>

<p>
  <strong>Formality:</strong>
  <%= @outfit.formality %>
</p>

<p>
  <strong>Work:</strong>
  <%= @outfit.work %>
</p>

<%= link_to 'Edit', edit_outfit_path(@outfit) %> |
