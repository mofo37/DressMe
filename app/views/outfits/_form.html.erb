<%= form_with(model: outfit, local: true) do |form| %>
  <% if outfit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(outfit.errors.count, "error") %> prohibited this outfit from being saved:</h2>

      <ul>
      <% outfit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <%= form.fields_for :outfit_photos do |f| %>
    <div class="form-group">
      <%= f.label :url, "URL" %>
      <%= f.url_field :url, class: "form-control" %>
    </div>

    <div class="form-check">
      <%= f.check_box :front, class: "form-check-input" %>
      <%= f.label :front, class: "form-check-label" %>
    </div>

    <div class="form-check">
      <%= f.check_box :back, class: "form-check-input" %>
      <%= f.label :back, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="form-check mb-3">
    <%= form.check_box :work, class: "form-check-input" %>
    <%= form.label :work, class: "form-check-label" %>
  </div>

  <div class="form-group">
    <%= form.label :formality %>
    <%= form.number_field :formality, class: "form-control", min: 1, max: 10, placeholder: "1 - 10" %>
    <p class="form-text text-muted">How fancy is this outfit?</p>
  </div>

  <div class="actions mt-4">
    <%= form.submit class: "btn btn-success btn-lg mr-3" %>
    <%= link_to 'Cancel', outfits_path %>
  </div>
<% end %>
