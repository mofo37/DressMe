<%= form_with(model: outfit, local: true) do |form| %>
  <% if outfit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(outfit.errors.count, "error") %> prohibited this outfit from being saved:</h2>

      <ul>
      <% outfit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%= form.fields_for @outfit.photos.new do |f| %>
    <div class="field">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :front %>
      <%= f.check_box :front %>
    </div>
    <div class="field">
      <%= f.label :back %>
      <%= f.check_box :back %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :formality %>
    <%= form.number_field :formality %>
  </div>

  <div class="field">
    <%= form.label :work %>
    <%= form.check_box :work %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
